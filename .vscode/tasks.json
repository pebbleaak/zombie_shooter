{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with CMake and Ninja",
            "type": "shell",
            "command": "cmake -G Ninja -DCMAKE_BUILD_TYPE=Debug ..; if ($?) { ninja }",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}